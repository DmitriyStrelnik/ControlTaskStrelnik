<mvc:View
	controllerName="zjblessons.ControlTaskStrelnik.controller.Worklist"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.ui.table">

	<m:Page>	
		<m:customHeader>
		</m:customHeader>
		<m:content>
			<Table id="table"  width="auto"  rows="{/zjblessons_base_Materials}">
				<extension>
                    <m:OverflowToolbar>
                        <m:Title text="Материалы" />
                        <m:ToolbarSpacer />
                        <m:Button
                            icon="sap-icon://person-placeholder"
                            text="Студент"
                            press=".onStudentButtonPress" />
                    </m:OverflowToolbar>
                </extension>
				<columns>
					<Column width="11rem">
    				<m:Label text="Material Text" />
    				<template>
       				 <m:Link text="{MaterialText}"/>
   				 	</template>
					</Column>
					<Column width="11rem">
    				<m:Label text="Material Description" />
    				<template>
       				 <m:Link text="{MaterialDescription}"/>
   				 	</template>
					</Column>
				</columns>
			</Table>
    	</m:content>
	</m:Page>

</mvc:View>